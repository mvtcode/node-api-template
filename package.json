{
	"name": "node-api-template",
	"version": "1.0.0",
	"description": "Node API template with expressjs, mongodb, redis",
	"main": "index.js",
	"scripts": {
		"start": "npm run genkey && NODE_ENV=production pm2 -i 0 start ./dist/index.js --name 'api'",
		"dev": "npm run genkey && NODE_ENV=development nodemon --exec babel-node ./src/index.js",
		"build": "babel src -d dist",
		"genkey": "if [ ! -f config/private.key ]; then openssl genrsa -out config/private.key 2048; fi",
		"init-db": "docker exec -it mongodb_dev mongo /var/data/initDb.js",
		"deploy": "npm i && npm run build && npm start",
		"test": ""
	},
	"engines": {
		"node": ">= 8.0.0"
	},
	"dependencies": {
		"amqp": "0.2.7",
		"axios": "0.18.1",
		"body-parser": "1.18.3",
		"colors": "1.3.2",
		"compression": "1.7.3",
		"cookie-parser": "1.4.3",
		"cors": "2.8.5",
		"crypto": "^1.0.1",
		"express": "4.16.4",
		"ioredis": "^4.16.0",
		"joi": "^14.3.1",
		"joi-date-extensions": "1.2.0",
		"joi-phone-number": "4.0.0",
		"jsonwebtoken": "8.4.0",
		"method-override": "3.0.0",
		"moment": "2.22.2",
		"mongoose": "5.3.14",
		"morgan": "1.9.1",
		"mustache": "3.0.1",
		"querystring": "^0.2.0",
		"tracer": "0.9.6"
	},
	"devDependencies": {
		"@babel/runtime": "^7.9.6",
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.9.6",
		"@babel/node": "^7.8.7",
		"@babel/plugin-transform-runtime": "^7.9.6",
		"@babel/preset-env": "^7.9.6",
		"@babel/preset-stage-0": "^7.8.3",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "14.0.0",
		"eslint-config-prettier": "6.10.0",
		"eslint-plugin-import": "2.20.1",
		"eslint-plugin-prettier": "3.1.2",
		"nodemon": "^2.0.4",
		"prettier": "1.19.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mvtcode/node-api-template.git"
	},
